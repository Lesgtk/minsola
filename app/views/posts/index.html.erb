<% provide :title, 'みんなの天気' %>
<% if flash[:success] %>
  <div class="time-limit alert alert-primary"><%= flash[:success] %></div>
<% end %>

<div class="container">
  <h2 class="text-center font-weight-bold my-4">みんなの天気</h2>
  <div class="row post-cards">
    <% @posts.each do |post| %>
      <div class="col-sm-4">
        <div class="card card-index">
          <%= link_to image_tag(post.image.to_s, class: 'weather_image', alt: 'Weather image'), post %>
          <div class="card-body">
            <h5 class="card-title"><%= post.title %></h5>
            <p class="card-text"><%= simple_format(post.body) %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>