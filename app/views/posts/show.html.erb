<% provide :title, set_address(@post.prefecture.name, @post.city.name) %>

<%= render "shared/success_messages" %>

<div class="container pt-4 pb-3">
  <div class="row">
    <div class="col-md-6">
      <%= render @post %>
    </div>
    <div class="col-md-6">
      <% if user_signed_in? %>
        <%= render partial: 'comments/form', locals: { comment: @comment } %>
      <% end %>
      <% if @post.comments.any? %>
        <div class="p-comment__list">
          <div class="p-comment_listTitle">コメント</div>
          <%= render @post.comments.includes(:user) %>
        </div>
      <% end %>
    </div>
  </div>
</div>